<div class="container">

  <h1>餐廳後台</h1>

      <br>
      <div>
        <%= link_to 'New Restaurant', new_eichhorn_restaurant_path, class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>圖示</th>
            <th>名稱</th>
            <th>編輯</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <td><div class="image-frame"><%= image_tag restaurant.image, width: "120px" %></div></td>
            <td><%= restaurant.name %></td>
            <td>
              <%= link_to 'Show', eichhorn_restaurant_path(restaurant) %>
              <%= link_to 'Edit', edit_eichhorn_restaurant_path(restaurant) %>
              <%= link_to 'Delete', eichhorn_restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
<%= paginate @restaurants %>
<%= link_to 'New Restaurant', new_eichhorn_restaurant_path %>

